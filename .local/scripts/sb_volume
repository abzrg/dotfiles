vol="$(pamixer --get-volume | sed s/,//)"

if [ "$vol" -gt "70" ]; then
    icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
    icon="ðŸ”ˆ"
else
    icon="ðŸ”‰"
fi

printf "%s" "$icon $vol%"
