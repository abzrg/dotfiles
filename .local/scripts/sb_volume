#!/usr/bin/env bash

# This script prints the sound volume with an icon next to it, to the stdout
# Reference: Luke Smith

[ $(pacmd list-sinks | awk '/muted/ { print $2 }' | head -n1) = "yes" ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume | sed s/,//)"

if [ "$vol" -gt "70" ]; then
    icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
    icon="ðŸ”ˆ"
else
    icon="ðŸ”‰"
fi

printf "%s" "$icon $vol%"
