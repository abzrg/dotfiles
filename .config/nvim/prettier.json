{
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "none",
  "bracketSpacing": false,
  "jsxBracketSameLine": false,
  "parser": "flow",
  "semi": true,
  "useTabs": false,
  "proseWrap": "preserve",
  "arrowParens": "avoid",

  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
