set statusbar-h-padding 0
set statusbar-v-padding 0

set page-padding 1

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

# This will map `m` to open the input bar you would normally open
# with `:` and input there that text. You can then press Enter to
# launch the command.
map m focus_inputbar ":exec zathuradic"
